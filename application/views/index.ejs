<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/header.ejs') %>
            <main>
                <section class="corousel">
                    <div class="btn">
                        <div class="prev" onclick="prevSlide()">&#10094;</div>
                    </div>
                    <div class="heading">
                        <h2 id="title">Recent blogs</h2>
                    </div>
                    <div class="slide-container">
                        <div class="slides">
                            <% for (let i=0; i < count; i++) {%>
                                <div class="slide">
                                    <img src="drone_3.jpg" class="img-tpc" alt="image not supported">
                                    <div class="blog-content">
                                        <h3 class="title"><%- blogs[i].title %></h3>
                                        <p class="snippet">
                                            <%- blogs[i].snippet %>
                                        </p>
                                        <p class="date-posted">
                                            <%- blogs[i].category %>
                                        </p>
                                        <p class="blog-author">
                                            Author: <%- blogs[i].author.name %>
                                        </p>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                    </div>
                    <div class="btn">
                        <div class="prev" onclick="prevSlide()">&#10094;</div>
                        <div class="next" onclick="nextSlide()">&#10095;</div>
                    </div>
                    </div>
                </section>

                <section class="search">
                    <div class="search-heading">
                        <h1>Search By Category</h1>
                    </div>
                    <div class="categories">
                        <div class="ctgs" id="football"><a href="#" class="links">Football</a></div>
                        <div class="ctgs" id="health"><a href="#" class="links">Health</a></div>
                        <div class="ctgs" id="politics"><a href="#" class="links">Politics</a></div>
                        <div class="ctgs" id="forex"><a href="#" class="links">Forex</a></div>
                        <div class="ctgs" id="music"><a href="#" class="links">Music</a></div>
                    </div>
                </section>
            </main>

            <%- include('./partials/footer.ejs') %>

                <script src="script.js"></script>
    </body>

</html>